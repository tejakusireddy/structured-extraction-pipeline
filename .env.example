# =============================================================================
# Structured Extraction Pipeline â€” Environment Configuration
# =============================================================================
# Copy to .env and fill in your values: cp .env.example .env

# --- API ---
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
DEBUG=false

# --- PostgreSQL ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/extraction_pipeline
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Qdrant ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=holdings_vectors

# --- OpenAI ---
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536

# --- Anthropic ---
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --- Extraction ---
DEFAULT_EXTRACTION_MODEL=gpt-4o
MAX_EXTRACTION_RETRIES=2
EXTRACTION_BATCH_SIZE=10
CONFIDENCE_REVIEW_THRESHOLD=0.3

# --- CourtListener ---
COURTLISTENER_API_URL=https://www.courtlistener.com/api/rest/v4
COURTLISTENER_API_KEY=your-key-here
COURTLISTENER_RATE_LIMIT=5

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json
